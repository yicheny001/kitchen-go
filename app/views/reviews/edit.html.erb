<div class="row">
  <div class="col-md-4 col-xs-4">
    <%= form_for @review do |f| %>
      <div class="form-group">
        <%= f.label :rating %>
        <%= f.select :rating, [1, 2, 3, 4, 5], :value => @review.rating %>
      </div>
      <div class="form-group">
        <%= f.label :content, "Review" %>
        <%= f.text_area :content, class:"form-control", :value => @review.content %>
      </div>
      <%= f.submit "Submit Review", class: "btn btn-primary pull-right" %>
    <% end %>
  </div>
</div>
