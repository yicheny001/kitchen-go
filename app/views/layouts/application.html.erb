<!DOCTYPE html>
<html>
  <head>
    <title>RecipeApp</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>

<div class="container">
  <h1><a href="<%= root_url %>"><img alt="KitchenGO" src="/images/kitchengo.png"/></a></h1>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="<%= root_url %>">KitchenGO</a>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <% if current_user %> 
          <li><%= link_to 'Create New Recipe', new_recipe_path%></li>
        </ul>
          <! -- user dropdown stuff -->
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="<%= profile_path %>" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.name %> <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to 'My Profile', profile_path%></li>
              <li><%= link_to 'My Shopping List', shopping_list_path(current_user.shopping_list.id)%></li>
              <li role="separator" class="divider"></li>
              <li><%= link_to 'Log Out', '/log_out'%></li>
            </ul>
          </li>
        </ul>
      <% else %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Sign In", new_session_path %></li>
        <li><%= link_to "Sign Up", new_user_path %></li>
      </ul>
      <%end%>
    </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>







  <%= yield %>
</div>
  </body>
</html>
